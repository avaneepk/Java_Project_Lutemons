<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Theme (unused, can be removed if you want) -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorSecondary">@color/accentBlue</item>
        <item name="android:statusBarColor">@color/primaryGreen</item>
        <item name="android:navigationBarColor">@color/primaryGreen</item>
        <item name="android:windowBackground">@color/surface_light</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextLargeTitle" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Chip style for status pills -->
    <style name="StatusChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/text_dark</item>
        <item name="chipBackgroundColor">@color/surface_light</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <!-- Custom Material Button Style -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <!-- Disable default tint so XML-set backgrounds work -->
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Main App Theme (used in AndroidManifest.xml) -->
    <style name="Theme.JavaProjectLutemons"
        parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorOnPrimary">@color/icon_white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accentBlue</item>
        <item name="colorOnSecondary">@color/icon_white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/surface_light</item>
        <item name="android:navigationBarColor">@color/primaryGreen</item>
        <item name="android:statusBarColor">@color/primaryGreen</item>

        <!-- Text -->
        <item name="android:textColor">@color/text_dark</item>

        <!-- Use custom button style -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

</resources>
