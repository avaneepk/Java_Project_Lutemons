<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_light">

    <!-- HEADER CARD: Home -->
    <androidx.cardview.widget.CardView
        android:id="@+id/home_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_normal"
        android:layout_marginTop="@dimen/padding_normal"
        app:cardBackgroundColor="@color/primaryGreen"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="@color/surface_white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Scrollable main content -->
    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/home_box"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_large">

            <!-- CARD 1: Lutedex -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_card1_title"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:text="@string/home_card1_sub"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_view_lutedex"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@color/accentOrange"
                        android:text="@string/home_card1_btn"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/surface_white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2: Training -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_card2_title"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:text="@string/home_card2_sub"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_view_training"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@color/accentRed"
                        android:text="@string/home_card2_btn"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/surface_white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3: Battle Field -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_card3_title"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:text="@string/home_card3_sub"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_view_battlefield"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@color/accentBlue"
                        android:text="@string/home_card3_btn"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/surface_white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4: Create Lutemons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_card4_btn"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:text="You can create new lutemons!"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_view_createnew"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@color/gray"
                        android:text="@string/home_card4_btn"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/surface_white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar -->
    <FrameLayout
        android:id="@+id/bottom_bar_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/include_bottom_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
