<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_splash.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lutemon_green">

    <!-- logo -->
    <ImageView
        android:id="@+id/logo_ball"
        android:layout_width="222dp"
        android:layout_height="225dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="@string/logo_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- upper curved text -->
    <com.example.javaprojectlutemons.CurvedTextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lutemon_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/lutemon_black"
        app:isTop="true"
        app:radius="160dp"
        app:layout_constraintBottom_toTopOf="@id/logo_ball"
        app:layout_constraintStart_toStartOf="@id/logo_ball"
        app:layout_constraintEnd_toEndOf="@id/logo_ball"/>

    <!-- lower curved text -->
    <com.example.javaprojectlutemons.CurvedTextView
        android:id="@+id/tv_bottom"
        android:layout_width="244dp"
        android:layout_height="252dp"
        android:text="@string/lutemon_subtitle"
        android:textColor="@color/lutemon_black"
        android:textSize="24sp"
        app:isTop="false"
        app:layout_constraintEnd_toEndOf="@id/logo_ball"
        app:layout_constraintStart_toStartOf="@id/logo_ball"
        app:layout_constraintTop_toBottomOf="@id/logo_ball"
        app:radius="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
